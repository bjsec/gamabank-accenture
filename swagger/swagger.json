          "format":"date-time"
        }
      }
    },
    "createdAccount": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "user_id": {
          "type": "number"
        },
        "balance": {
          "type": "number"
        },
        "credit_limit": {
          "type": "number"
        },
        "card_due_day": {
          "type": "number"
