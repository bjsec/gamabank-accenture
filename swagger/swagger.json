  "components": {
    "schemas": {
      "users": {
        "type": "object",
        "properties": {
          "full_name": {
            "required":true,
            "type": "string"
          },
          "user_name": {
            "required":true,
            "type": "string"
          },
          "user_email": {
            "required":true,
            "type": "string"
          },
          "password": {
            "required":true,
            "type": "string"
          },
          "telephone": {
            "required":true,
            "type": "string"
          },
          "card_due_day": {
            "required":true,
            "type": "number"
          }
        }
      },      
      "createdUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "full_name": {
            "type": "string"
          },
          "user_email": {
            "type": "string"
          },
          "telephone": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
