  "host": ".",
  "basePath": "/",
  "tags": [
    {
      "name": "users",
      "description": "Criação de conta  do usuário",
      "externalDocs": {
        "description": "Criação de conta do usuário",
        "url": "http://swagger.io"
      }
    },
    {
      "name": "sessions",
      "description": "Sessão do usuário",
      "externalDocs": {
        "description": "Sessão do usuário iniciada",
        "url": "http://swagger.io"
      }
    },
    {
      "name": "accounts",
      "description": "Criação da conta bancária do usuário",
      "externalDocs": {
        "description": "Criação da conta bancária do usuário",
        "url": "http://swagger.io"
      }
    },
    {
      "name": "transactions",
      "description": "transações",
      "externalDocs": {
        "description": "transação interna",
        "url": "http://swagger.io"
      }
    }
  ],
  "schemes": ["https", "http"],
  "paths": {
    "/users": {
      "post": {
        "tags": ["users"],
        "summary": "Criação do usuário",
        "description": "Criação de uma conta para o usuário",
        "operationId": "userController.js",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Created user object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Logado",
            "produces": ["application/json"],
            "schema": {
              "$ref": "#/definitions/User200"
            }
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": ["sessions"],
        "summary": "sessão do usuário",
        "description": "Criação da sessão de um usuário",
        "operationId": "sessionController.js",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "The user name for login",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Sessions"
            }
          }
        ],
        "responses": {
          "Sessions200": {
            "description": "Usuário logado",
            "schema": {
              "$ref": "#/Sessions200"
            }
          },
          "400": {
            "description": "Senha inválida"
          }
        }
      }
    },
    "/internaltransfer": {
      "post": {
        "tags": ["transactions"],
        "summary": "Transferência interna",
        "description": "Transferencia interna",
        "operationId": "InternTransferController.store",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Created user object",
            "required": true,
            "schema": {
              "$ref": "#/internalTransfer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Transaferência feita com sucesso"
          },
          "400": {
            "description": "Não obteve sucesso na transferência",
            "schema": {
              "type": "object",
              "properties": [
                {
                  "account_id": {
                    "type": "integer",
                    "format": "int64"
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:pets": "modify pets in your account",
        "read:pets": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "User200": {
      "type": "object",
      "properties": {
        "createdUser": {
          "$ref": "#/definitions/createdUser"
        },
        "createdAccount": {
          "$ref": "#/definitions/createdAccount"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "full_name": {
          "type": "string"
        },
        "user_name": {
          "type": "string"
        },
        "user_email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "telephone": {
          "type": "string"
        },
        "card_due_day": {
          "type": "string"
        }
      }
    },
    "createdUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "full_name": {
          "type": "string"
        },
        "user_email": {
          "type": "string"
        },
        "telephone": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Sessions": {
      "type": "object",
      "properties": {
        "user_email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "xml": {
        "name": "User"
      }
    },
    "internalTransfer": {
      "type": "object",
      "properties": {
        "account_id": {
          "type": "integer"
        },
        "transaction_value": {
          "type": "number"
        },
        "target_account_id": {
          "type": "integer"
        },
        "target_user_name": {
          "type": "string"
        },
        "taget_cpf": {
          "type": "string"
        }
      }
    },

    "createdAccount": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "user_id": {
          "type": "number"
        },
        "balance": {
          "type": "number"
        },
        "credit_limit": {
          "type": "number"
        },
        "card_due_day": {
          "type": "number"
        },
        "updateAt": {
          "type": "string",
          "format": "date-time"
        },
        "createAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}
