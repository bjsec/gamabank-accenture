{
  "swagger": "2.0",
  "info": {
    "description": "Api criada durante a gama Academy Accenture 2.0 pelo grupo EventLoop",
    "version": "1.0.0",
    "title": "Gamabank EventLoop",
    "contact": {
      "url": "https://github.com/lokinmodar/gamabank-accenture"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "gamabank-eventloop.herokuapp.com:80",
  "basePath": "/",
  "tags": [
    {
      "name": "users",
      "description": "Criação de conta  do usuário e conta bancária",
      "externalDocs": {
        "description": "Rotina para criação de conta do usuário e conta bancária"
      }
    },
    {
      "name": "sessions",
      "description": "Criação de Sessão do usuário",
      "externalDocs": {
        "description": "Sessão do usuário iniciada"
      }
    },
    {
      "name": "transactions",
      "description": "Transações bancárias",
      "externalDocs": {
        "description": "Transações."
      }
    }
  ],
  "schemes": ["https", "http"],
  "paths": {
    "/users": {
      "post": {
        "tags": ["users"],
        "summary": "Criação de conta de usuário",
        "description": "Criação de uma conta para o usuário conforme dados enviados na requisição POST",
        "operationId": "user.controller.js",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Objeto com informações de usuário criado",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário e conta criados",
            "produces": ["application/json"],
            "schema": {
              "$ref": "#/definitions/UserCreated"
            }
          },
          "400": {
            "description": "Erro",
            "produces": ["application/json"],
            "schema": {
              "$ref": "#/definitions/NotCreatedUser"
            }
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": ["sessions"],
        "summary": "sessão do usuário",
        "description": "Criação da sessão de um usuário",
        "operationId": "sessionController.js",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "The user name for login",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Sessions"
            }
          }
        ],
        "responses": {
          "Sessions200": {
            "description": "Usuário logado",
            "schema": {
              "$ref": "#/definitions/createdSession"
            }
          },
          "400": {
            "description": "Senha inválida",
            "schema": {
              "$ref": ""
            }
          }
        }
      }
    },
    "/internalTransfer": {
      "post": {
        "tags": ["transactions"],
        "summary": "Transferência interna",
        "description": "Transferencia interna",
        "operationId": "internalTransfer.Controller.js",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Objeto com informações sobre transferência entre contas",
            "required": true,
            "schema": {
              "$ref": "#/definitions/InternalTransfer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Transaferência feita com sucesso",
            "schema": {
              "$ref": "#/definitions/createdInternalTransafer"
            }
          },
          "400": {
            "description": "Não obteve sucesso na transferência",
            "schema": {
              "$ref": "#/definitions/unCreatedInternalTransfer"
            }         
          }
        }
      }
    },
    "/depositTransfer": {
      "post": {
        "tags": ["transactions"],
        "summary": "Deposit",
        "description": "Deposit dont need token",
        "operationId": "deposit.controller.js",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Object Deposit",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Deposit"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "deposit completed",
            "schema": {
              "$ref": "#/definitions/transactionSaved"
            }
          },
          "400": {
            "description": "double check the filled fields"                     
          }
        }
      }
    },
    "/debitPurchaseTransfer": {
      "post": {
        "tags": ["transactions"],
        "summary": "debitPurchaseTransafer",
        "description": "Compra cartão débito",
        "operationId": "debitPurchase.controller.js",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Object debitPurchase",
            "required": true,
            "schema": {
              "$ref": "#/definitions/debitPurchase"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "debit Purchase completed",
            "schema": {
              "$ref": "#/definitions/purchaseMade"
            }
          },
          "400": {
            "description": "double check the filled fields"                     
          }
        }
      }
    },
    "/externalTransfer": {
      "post": {
        "tags": ["transactions"],
        "summary": "externalTransafer",
        "description": "External Transafer",
        "operationId": "externalTransfer.controller.js",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Object external transfer",
            "required": true,
            "schema": {
              "$ref": "#/definitions/externalTransfer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "external transfer sucessful",
            "schema": {
              "$ref": "#/definitions/externalTransferSaved"
            }
          },
          "400": {
            "description": "double check the filled fields"                     
          }
        }
      }
    },
    "/creditPurchase": {
      "post": {
        "tags": ["transactions"],
        "summary": "CreditPurchaseTransafer",
        "description": "Compra cartão crédito",
        "operationId": "creditPurchase.controller.js",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Object creditPurchase",
            "required": true,
            "schema": {
              "$ref": "#/definitions/creditPurchase"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Credit Purchase completed",
            "schema": {
              "$ref": "#/definitions/creditPurchaseMade"
            }
          },
          "400": {
            "description": "double check the filled fields"                     
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "bearer_token": {
      "type": "oauth2",
      "authorizationUrl": "https://gamabank-eventloop.herokuapp.com/sessions",
      "flow": "implicit",
      "scopes": {
        "write:transactions": "Faz transações em sua conta",
        "read:transactions": "Consulta movimentações em sua conta"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "InternalTransfer": {
      "type": "object",
      "description": "Para que a requisição seja processada corretamente informe 1 desses 3 campos opcionais: target_account_id, target_user_name, target_cpf",    
      "properties": {
        "transaction_value": {
          "required": true,
          "type": "number"
        },
        "target_account_id": {
          "type": "integer"
        },
        "target_user_name": {
          "type": "string"
        },
        "target_cpf": {
          "type": "string"
        }
      },
      "xml": {
        "name": "internalTransfer"
      }
    },
    "externalTransfer": {
      "type": "object",
      "description": "",
      "properties": {
        "transaction_value": {
          "type": "number"
        },
        "target_bank_id": {
          "type": "number"
        },
        "target_account_id": {
          "type": "number"
        },
        "target_cpf": {
          "type": "number"
        }
      }
    },
    "Deposit": {
      "type": "object",
      "description": "Para que requisição a requisição seja processada pelo menos 1 campos desses 2 deverá ser preenchido: account_id ou incoming_cpf",
      "properties": {
        "account_id": {
          "type": "number"
        },
        "transaction_value": {
          "required":true,
          "type": "number"
        },
        "incoming_cpf": {
          "type": "number"
        }
      }
    },
    "transactionSaved": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "account_id": {
          "type": "number"
        },
        "transaction_type_id": {
          "type": "number"
        },
        "transaction_value": {
          "type": "number"
        },
        "incoming_cpf": {
          "type": "number"
        },
        "transaction_due_date": {
          "type": "string",
          "format":"date-time"
        },
        "transaction_pay_date": {
          "type": "string",
          "format": "date-time"
        },
        "updateAt": {
          "type": "string",
          "format":"date-time"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "debitPurchase": {
      "type": "object",
      "properties": {
        "transaction_value": {
          "required": true,
          "type": "number"
        }
      }
    },
    "externalTransferSaved": {
      "properties": {
      "id": {
        "type": "number"
      },
      "account_id": {
        "type": "number"
      },
      "target_bank_id": {
        "type": "number"
      },
      "target_account_id": {
        "type": "number"
      },
      "transaction_type_id": {
        "type": "number"
      },
      "transaction_value": {
        "type": "number"
      },
      "target_cpf": {
        "type": "number"
      },
      "incoming_cpf": {
        "type": "number"
      },
      "transaction_due_date": {
        "type": "string",
        "format":"date-time"
      },
      "transaction_pay_date": {
        "type": "string",
        "format": "date-time"
      },
      "updateAt": {
        "type": "string",
        "format":"date-time"
      }
    }
  },
    "creditPurchaseMade": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "account_id": {
          "type": "number"           
          },
        "transaction_type_id": {
          "type": "number"
        },
        "transaction_value": {
          "type": "number"
        },
        "operation": {
          "type": "string"
        },
        "transaction_due_date": {
          "type": "string",
          "format":"date-time"
        },
        "updateAt": {
          "type": "string",
          "format":"date-time"
        },
        "createAt": {
          "type": "string",
          "format":"date-time"
        }        
      },
      "currentCreditLimit": {
        "type": "number"
      }        
  },
    "purchaseMade": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "account_id": {
          "type": "number"
        },
        "transaction_type_id": {
          "type": "number"
        },
        "transaction_value": {
          "type": "number"
        },
        "transaction_due_date": {
          "type": "string",
          "format": "date-time"
        },
        "transaction_pay_date": {
          "type": "string",
          "format": "date-time"
        },
        "updateAt": {
          "type": "string",
          "format": "date-time"
        },
        "createAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "debitBalance": {
        "type": "number"
      }
    },
    "creditPurchase": {
      "type": "object",
      "properties": {
        "transaction_value": {
          "type": "number"
        },
        "operation": {
          "type": "string"
        }      
    }
  },
    
    "UserCreated": {
      "type": "object",
      "properties": {
        "createdUser": {
          "$ref": "#/definitions/createdUser"
        },
        "createdAccount": {
          "$ref": "#/definitions/createdAccount"
        }
      }
    },
    "NotCreatedUser": {
      "type": "object",
      "properties": {
        "Error": "User already exists"
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "full_name": {
          "required":true,
          "type": "string"
        },
        "user_name": {
          "required":true,
          "type": "string"
        },
        "user_email": {
          "required":true,
          "type": "string"
        },
        "password": {
          "required":true,
          "type": "string"
        },
        "telephone": {
          "required":true,
          "type": "string"
        },
        "card_due_day": {
          "required":true,
          "type": "number"
        }
      }
    },
    "createdUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "full_name": {
          "type": "string"
        },
        "user_email": {
          "type": "string"
        },
        "telephone": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Sessions": {
      "type": "object",
      "properties": {
        "user_email": {
          "required":true,
