{
  "swagger": "2.0",
  "info": {
    "description": "Api criada durante a gama Academy Accenture 2.0 pelo grupo EventLoop",
    "version": "1.0.0",
    "title": "Gamabank EventLoop",
    "contact": {
      "url": "https://github.com/lokinmodar/gamabank-accenture"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "gamabank-eventloop.herokuapp.com:80",
  "basePath": "/",
  "tags": [
    {
      "name": "users",
      "description": "Criação de conta  do usuário e conta bancária",
      "externalDocs": {
        "description": "Rotina para criação de conta do usuário e conta bancária"
      }
    },
    {
      "name": "sessions",
      "description": "Criação de Sessão do usuário",
      "externalDocs": {
        "description": "Sessão do usuário iniciada"
      }
    },
    {
      "name": "transactions",
      "description": "Transações bancárias",
      "externalDocs": {
        "description": "Transações."
      }
    }
  ],
  "schemes": ["https", "http"],
  "paths": {
    "/users": {
      "post": {
        "tags": ["users"],
        "summary": "Criação de conta de usuário",
        "description": "Criação de uma conta para o usuário conforme dados enviados na requisição POST",
        "operationId": "user.controller.js",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Objeto com informações de usuário criado",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário e conta criados",
            "produces": ["application/json"],
            "schema": {
              "$ref": "#/definitions/User200"
            }
          },
          "400": {
            "description": "Erro",
            "produces": ["application/json"],
            "schema": {
              "$ref": "#/definitions/User400"
            }
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": ["sessions"],
        "summary": "sessão do usuário",
        "description": "Criação da sessão de um usuário",
        "operationId": "sessionController.js",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "The user name for login",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Sessions"
            }
          }
        ],
        "responses": {
          "Sessions200": {
            "description": "Usuário logado",
            "schema": {
              "$ref": "#/Sessions200"
            }
          },
          "400": {
            "description": "Senha inválida",
            "schema": {
              "$ref": "#/Sessions200"
            }
          }
        }
      }
    },
    "/internaltransfer": {
      "post": {
        "tags": ["transactions"],
        "summary": "Transferência interna",
        "description": "Transferencia interna",
        "operationId": "internalTransfer.Controller.js",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Objeto com informações sobre transferência entre contas",
            "required": true,
            "schema": {
              "$ref": "#/definitions/InternalTransfer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Transaferência feita com sucesso"
          },
          "400": {
            "description": "Não obteve sucesso na transferência",
            "schema": {
              "type": "object",
              "properties": [
                {
                  "account_id": {
                    "type": "integer",
                    "format": "int64"
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "bearer_token": {
      "type": "oauth2",
      "authorizationUrl": "https://gamabank-eventloop.herokuapp.com/sessions",
      "flow": "implicit",
      "scopes": {
        "write:transactions": "Faz transações em sua conta",
        "read:transactions": "Consulta movimentações em sua conta"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "InternalTransfer": {
      "type": "object",
      "properties": {
        "account_id": {
          "type": "integer"
        },
        "transaction_value": {
          "type": "number"
        },
        "target_account_id": {
          "type": "integer"
        },
        "target_user_name": {
          "type": "string"
        },
        "target_cpf": {
          "type": "string"
        }
      },
      "xml": {
        "name": "internalTransfer"
      }
    },
    "User200": {
      "type": "object",
      "properties": {
        "createdUser": {
          "$ref": "#/definitions/createdUser"
        },
        "createdAccount": {
          "$ref": "#/definitions/createdAccount"
        }
      }
    },
    "User400": {
      "type": "object",
      "properties": {
        "Error": "User already exists"
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "full_name": {
          "type": "string"
        },
        "user_name": {
          "type": "string"
        },
        "user_email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "telephone": {
          "type": "string"
        },
        "card_due_day": {
          "type": "string"
        }
      }
    },
    "createdUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "full_name": {
          "type": "string"
        },
        "user_email": {
          "type": "string"
        },
        "telephone": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Sessions": {
      "type": "object",
      "properties": {
        "user_email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "xml": {
        "name": "Sessions"
      }
    },
    "createdAccount": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "user_id": {
          "type": "number"
        },
        "balance": {
          "type": "number"
        },
        "credit_limit": {
          "type": "number"
        },
        "card_due_day": {
          "type": "number"
        },
        "updateAt": {
          "type": "string",
          "format": "date-time"
        },
        "createAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}
